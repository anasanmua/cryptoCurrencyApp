<div class="container">
    <h2 class="market-data-h2">Market Data</h2>

    <div class="row">


        <div class="cryptoview">
            <div class="col-2 crypto-border">Crypto Name</div>
            <div class="col-2 crypto-border">24hr Price in USD</div>
            <div class="col-8 crypto-border">Graph of price for the last 30 days</div>

        </div>
    </div>



    <div class="container marketData">




        <div class="row">

            {{#each selectedCryptos}}
            <div class="col-2 graph-id">{{id}}</div>

            <div class="col-2 graph-id graph-price">{{priceUsd}}
            </div>

            <div class="col-8">
                <h3 class="waiting">Esperando respuesta de la API...</h3>
                <figure>
                    <canvas class="graph-image" id="chart{{@index}}"> </canvas>
                </figure>
            </div>

            <input hidden readonly class='crypto-id' value="{{id}}">
            {{/each}}

        </div>




        <!-- ChartJS -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js"></script>



        <!-- DCharts development -->
        <script src="../../js/graph-market-data.js"></script>

    </div>