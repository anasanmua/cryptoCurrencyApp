<h2></h2>
<div class="container main d-flex justify-content-center">

    {{#with user}}

    <div class="profilecard card row d-flex flex-row">
        <div class="col-3">
            <div class="profileimage"><img src="{{image}}" class="card-img-top" alt="..."></div>
            {{#if ../profileOwner}}<a href="/edit-profile" class="btn btn-primary cardbtn">Edit profile</a>{{/if}}
        </div>
        <div class="card-body col-6 carddesc align-items-center flex-column justify-content-center">
            <div class="d-flex justify-content-around">
                <h5 class="card-title">{{name}}</h5>
                <p class="card-text">{{role}}</p>
            </div>
            <hr>
            <p class="card-text">{{description}}</p>
        </div>
        <div class="row d-flex flex-row">
            <hr>
            <div class="col cryptocard d-flex justify-content-center align-items-center">
                <div class="cryptoname d-flex align-items-center">
                    <p>soy una cripto</p>
                </div>
                <button class="btn btn-outline-danger">X</button>
            </div>
        </div>
    </div>

</div>

